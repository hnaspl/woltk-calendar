# Flask
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/wotlk_calendar
# Alternative individual DB settings (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=user
DB_PASSWORD=password
DB_NAME=wotlk_calendar

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400

# APScheduler
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
